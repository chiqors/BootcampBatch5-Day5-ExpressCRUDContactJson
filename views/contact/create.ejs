<%- contentFor('main') %>

<h1>Create Contact</h1>

<% if(flashMessage.length > 0) { %>
<% flashMessage.forEach((item) => { %>
<div class="alert alert-<%= item.type %> alert-dismissible fade show" id="alert" role="alert">
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <%= item.message %>
</div>
<% }) %>
<% } %>

<form action="/contact" method="POST">
  <div class="form-group">
    <label for="nama">Nama</label>
    <input type="text" class="form-control" id="nama" name="nama" placeholder="Masukkan nama">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" name="email" placeholder="Masukkan email">
  </div>
  <div class="form-group">
    <label for="notelp">No HP</label>
    <input type="text" class="form-control" id="notelp" name="notelp" placeholder="Masukkan no hp">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>